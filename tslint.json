{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "single", "avoid-escape", "avoid-template", "jsx-single"],
        "semicolon": [true, "never"],
        "trailing-comma": [true, {
            "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "never"
            },
            "singleline": "never",
            "esSpecCompliant": true
        }],
        "interface-name": [true, "never-prefix"]
    },
    "rulesDirectory": []
}
